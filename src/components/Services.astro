---
const services = [
  {
    icon: 'web',
    title: 'Niestandardowe aplikacje webowe',
    description: 'Platformy SaaS na zamówienie i narzędzia wewnętrzne zbudowane w React i Next.js dla maksymalnej wydajności.',
  },
  {
    icon: 'shopping_cart',
    title: 'E-commerce Headless',
    description: 'Błyskawicznie szybkie witryny sklepowe korzystające z Shopify Hydrogen lub niestandardowych rozwiązań handlowych Next.js.',
  },
  {
    icon: 'smartphone',
    title: 'Progressive Web Apps (PWA)',
    description: 'Doświadczenia mobilne, które działają offline i wyglądają natywnie, bez kłopotów ze sklepem aplikacji.',
  },
];
---

<section id="services" class="py-24 section-divider">
  <div class="max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main container with elegant styling -->
    <div class="relative rounded-[2.5rem] bg-white/[0.02] backdrop-blur-sm border border-white/[0.06] p-8 md:p-12 lg:p-16 overflow-hidden">
      <!-- Decorative elements -->
      <div class="absolute top-0 right-0 w-[300px] h-[300px] bg-primary/10 rounded-full blur-[100px] -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 left-0 w-[200px] h-[200px] bg-primary/5 rounded-full blur-[80px] translate-y-1/2 -translate-x-1/2"></div>
      
      <!-- Corner accents -->
      <div class="absolute top-6 left-6 w-16 h-16 border-l-2 border-t-2 border-primary/20 rounded-tl-2xl"></div>
      <div class="absolute bottom-6 right-6 w-16 h-16 border-r-2 border-b-2 border-primary/20 rounded-br-2xl"></div>

      <div class="relative grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-16">
        <!-- Left Column - Header -->
        <div class="lg:col-span-5">
          <span class="inline-flex items-center gap-2 text-primary font-bold tracking-wider uppercase text-xs mb-6">
            <span class="w-8 h-px bg-primary"></span>
            Nasza specjalizacja
          </span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-white leading-tight">Kompleksowe usługi developerskie</h2>
          <p class="text-gray-400 text-lg mb-8 leading-relaxed">
            Nie tylko piszemy kod; projektujemy rozwiązania napędzające wzrost biznesu. Nasze wyspecjalizowane zespoły pokrywają każdy aspekt nowoczesnego stosu webowego.
          </p>
          <a 
            href="#contact" 
            class="inline-flex items-center justify-center h-12 px-8 rounded-full bg-white text-background-dark font-bold text-sm hover:bg-primary hover:text-background-dark transition-all duration-300 shadow-lg shadow-white/10"
          >
            Pokaż wszystkie usługi
          </a>
        </div>

        <!-- Right Column - Services List -->
        <div class="lg:col-span-7 flex flex-col gap-4">
          {services.map((service, index) => (
            <div class="group relative flex items-start gap-5 p-6 rounded-2xl bg-white/[0.03] border border-white/[0.06] hover:border-primary/30 hover:bg-white/[0.05] transition-all duration-300">
              <!-- Number indicator -->
              <div class="absolute -left-3 top-1/2 -translate-y-1/2 w-6 h-6 rounded-full bg-background-dark border border-primary/30 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                <span class="text-xs text-primary font-bold">{index + 1}</span>
              </div>
              
              <div class="shrink-0 w-14 h-14 rounded-2xl bg-primary/10 flex items-center justify-center text-primary group-hover:bg-primary group-hover:text-background-dark transition-all duration-300 group-hover:scale-110">
                <span class="material-symbols-outlined text-2xl">{service.icon}</span>
              </div>
              <div class="pt-1">
                <h3 class="text-xl font-bold mb-2 text-white group-hover:text-primary transition-colors">{service.title}</h3>
                <p class="text-gray-400 leading-relaxed text-sm">{service.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
