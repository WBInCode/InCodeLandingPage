---
const navLinks = [
  { href: '/#about', label: 'O nas' },
  { href: '/#services', label: 'Us≈Çugi' },
  { href: '/#work', label: 'Portfolio' },
  { href: '/#careers', label: 'Kariera' },
];
---

<header class="sticky top-0 z-50 w-full border-b border-white/10 bg-background-dark/80 backdrop-blur-md">
  <div class="max-w-[1280px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <img src="/img/InCodeLogo.png" alt="InCode Logo" class="h-8 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          link.label === 'Kariera' ? (
            <a 
              id="career-link"
              href="#"
              class="text-sm font-medium text-gray-300 hover:text-primary transition-colors"
            >
              {link.label}
            </a>
          ) : (
            <a 
              href={link.href}
              class="text-sm font-medium text-gray-300 hover:text-primary transition-colors"
            >
              {link.label}
            </a>
          )
        ))}
      </nav>

      <!-- CTA Button & Mobile Menu -->
      <div class="flex items-center gap-4">
        <a 
          href="/#contact" 
          class="hidden sm:flex items-center justify-center h-9 px-4 rounded-full bg-primary text-background-dark text-sm font-bold hover:brightness-110 transition-all"
        >
          Wycena
        </a>
        <button 
          id="mobile-menu-btn"
          class="md:hidden p-2 text-gray-300"
          aria-label="Menu"
        >
          <span class="material-symbols-outlined">menu</span>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-surface-dark border-t border-white/5">
    <div class="max-w-[1280px] mx-auto px-4 sm:px-6 lg:px-8 py-4 flex flex-col gap-2">
        {navLinks.map((link) => (
          link.label === 'Kariera' ? (
            <a id="career-link-mobile" href="#" class="text-gray-300 hover:text-primary transition-colors py-2 text-sm">{link.label}</a>
          ) : (
            <a 
              href={link.href}
              class="text-gray-300 hover:text-primary transition-colors py-2 text-sm"
            >
              {link.label}
            </a>
          )
        ))}
      <a 
        href="/#contact" 
        class="bg-primary text-background-dark text-center mt-2 py-2.5 rounded-full text-sm font-bold"
      >
        Wycena
      </a>
    </div>
  </div>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });

  // Career drawer trigger
  const careerLink = document.getElementById('career-link');
  const careerLinkMobile = document.getElementById('career-link-mobile');
  careerLink?.addEventListener('click', (e) => { e.preventDefault(); window.openCareer?.(); });
  careerLinkMobile?.addEventListener('click', (e) => { e.preventDefault(); mobileMenu?.classList.add('hidden'); window.openCareer?.(); });
</script>
