---
const projects = [
  {
    title: 'NeoBank Dashboard',
    category: 'FINTECH',
    description: 'Platforma wizualizacji danych finansowych w czasie rzeczywistym.',
    tags: ['Next.js', 'Finanse'],
    gradient: 'from-slate-800 to-slate-600',
  },
  {
    title: 'HealthStream App',
    category: 'MEDTECH',
    description: 'System monitorowania pacjentów dla szpitali.',
    tags: ['React Native', 'Opieka zdrowotna'],
    gradient: 'from-emerald-900 to-slate-900',
  },
];
---

<section id="work" class="py-24 section-divider">
  <div class="max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main container -->
    <div class="relative rounded-[2.5rem] bg-white/[0.02] backdrop-blur-sm border border-white/[0.06] p-8 md:p-12 lg:p-16 overflow-hidden">
      <!-- Decorative elements -->
      <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[400px] h-[200px] bg-primary/10 rounded-full blur-[100px]"></div>
      
      <!-- Corner accents -->
      <div class="absolute top-6 left-6 w-16 h-16 border-l-2 border-t-2 border-primary/20 rounded-tl-2xl"></div>
      <div class="absolute bottom-6 right-6 w-16 h-16 border-r-2 border-b-2 border-primary/20 rounded-br-2xl"></div>

      <!-- Section Header -->
      <div class="relative text-center mb-12">
        <span class="inline-flex items-center gap-2 text-primary font-bold tracking-wider uppercase text-xs mb-4">
          <span class="w-8 h-px bg-primary"></span>
          Portfolio
          <span class="w-8 h-px bg-primary"></span>
        </span>
        <h2 class="text-3xl md:text-5xl font-bold mb-4 text-white">Wybrane prace</h2>
        <p class="text-gray-400 max-w-2xl mx-auto">Popatrz, jak pomogliśmy firmom zaznaczyć ich cyfrową obecność.</p>
      </div>

      <!-- Projects Grid -->
      <div class="relative grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8">
        {projects.map((project, index) => (
          <div class="group cursor-pointer">
            <div class="overflow-hidden rounded-2xl mb-5 bg-surface-dark aspect-video relative border border-white/5 group-hover:border-primary/30 transition-all duration-500">
              <div class={`absolute inset-0 bg-gradient-to-tr ${project.gradient} opacity-90 group-hover:scale-110 transition-transform duration-700`}></div>
              
              <!-- Category watermark -->
              <div class="absolute inset-0 flex items-center justify-center">
                <span class="text-white/10 text-5xl md:text-6xl font-black tracking-tighter select-none">{project.category}</span>
              </div>
              
              <!-- Hover overlay -->
              <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/10 transition-colors duration-500"></div>
              
              <!-- Tags at bottom -->
              <div class="absolute bottom-0 left-0 p-5 w-full bg-gradient-to-t from-black/90 via-black/50 to-transparent">
                <div class="flex gap-2">
                  {project.tags.map((tag) => (
                    <span class="text-xs font-bold px-3 py-1.5 bg-white/10 backdrop-blur-sm rounded-full text-white border border-white/10">{tag}</span>
                  ))}
                </div>
              </div>
              
              <!-- View project indicator -->
              <div class="absolute top-4 right-4 w-10 h-10 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 border border-white/20">
                <span class="material-symbols-outlined text-white text-lg">arrow_outward</span>
              </div>
            </div>
            
            <h3 class="text-xl md:text-2xl font-bold mb-2 text-white group-hover:text-primary transition-colors">{project.title}</h3>
            <p class="text-gray-500 text-sm">{project.description}</p>
          </div>
        ))}
      </div>

      <!-- View All Link -->
      <div class="relative mt-12 text-center">
        <a href="#" class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-white/5 border border-white/10 text-sm font-bold uppercase tracking-wider text-white hover:text-primary hover:border-primary/30 hover:bg-primary/5 transition-all duration-300">
          <span>Pokaż wszystkie case studies</span>
          <span class="material-symbols-outlined text-lg">arrow_forward</span>
        </a>
      </div>
    </div>
  </div>
</section>
